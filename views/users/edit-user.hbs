      </div>
      <div class="form-group">
        <label for="image-input">Foto:</label>
        <input type="file" name="image" id="image-input" class="form-control-file" />
      </div>
      <button class="btn-edit-user-2" type="submit" class="btn btn-primary">Alterar</button>
       </form>
{{/with}}
